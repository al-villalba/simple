<phpunit bootstrap="./bootstrap.php"
		 colors="true">

	<php>
		<env name="APP_ENV" value="local"/>
		<env name="DB_HOST" value="localhost"/>
		<env name="DB_NAME" value="casino"/>
		<env name="DB_USER" value="casino"/>
		<env name="DB_PASS" value="casino"/>
	</php>

	<testsuites>
		<testsuite name="all">
			<directory>.</directory>
		</testsuite>
	</testsuites>

	<logging>
		<log type="coverage-html" target="./test-coverage/simple" lowUpperBound="35" highLowerBound="70"/>
	</logging>

	<filter>
		<whitelist processUncoveredFilesFromWhitelist="false">
			<directory suffix=".php">../../mvc/src/</directory>
			<directory suffix=".php">../../vendor/simple/mvc/src/</directory>
		</whitelist>
	</filter>

</phpunit>
